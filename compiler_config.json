{
	"language": "Solidity",
	"settings": {
		"optimizer": {
			"enabled": true,
			"runs": 200
		},
		"outputSelection": {
			"*": {
				"": [
					"ast"
				],
				"*": [
					"abi",
					"metadata",
					"devdoc",
					"userdoc",
					"storageLayout",
					"evm.legacyAssembly",
					"evm.bytecode",
					"evm.deployedBytecode",
					"evm.methodIdentifiers",
					"evm.gasEstimates",
					"evm.assembly"
				]
			}
		},
		"remappings": [
			"ds-test/=../../node_modules/ds-test/src/",
			"solmate/=../../node_modules/@rari-capital/solmate/src/",
			"forge-std/=../../node_modules/forge-std/src/",
			"@latticexyz/=../../node_modules/@latticexyz/"
		]
	}
}